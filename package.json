{
  "name": "@a4turp/threads.js",
  "version": "1.6.7",
  "author": "Artur Papikian",
  "license": "MIT",
  "description": "Light and easy web-tool for accessing multiple threads via web workers.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "comment//": "publish: pnpm build --onSuccess 'echo 1' for later automations...",
  "scripts": {
    "build": "tsup src/index.ts --format esm, cjs --dts --clean",
    "watch": "pnpm build --watch",
    "dev": "pnpm build && vite",
    "test": "vitest run tests/module.test.js",
    "coverage": "vitest run --coverage",
    "deploy": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArturNiko/threads.js.git"
  },
  "bugs": {
    "url": "https://github.com/ArturNiko/threads.js/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@vitest/coverage-istanbul": "^1.6.0",
    "happy-dom": "^13.10.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "multithreading",
    "multithread",
    "multicore",
    "workers",
    "pools",
    "typescript",
    "ts",
    "javascript",
    "js"
  ]
}
