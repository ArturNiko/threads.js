{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // Ensuring the output directory is prefixed with "./"
    "rootDir": "./src"  // Adding rootDir to specify the source directory

  },
  "include": ["src/**/*.ts"]
}